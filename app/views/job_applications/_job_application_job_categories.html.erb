<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Job Categories

    <a data-toggle="collapse" href="#job_application_job_categories_new_form">
      Add job category
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @job_application.job_categories.each do |job_category| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to job_category, job_category %>

        <%= link_to job_category, method: :delete, data: { confirm: "Do you really want to delete this job_category" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="job_application_job_categories_new_form">
        <%= render partial: "job_applications/job_application_job_categories_new_form" %>
      </div>
    </div>

  </ul>
</div>
