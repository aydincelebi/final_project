<% was_validated = job_type.errors.any? %>

<%= form_with(model: job_type, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% product_class = "form-control" %>
    <% product_was_invalid = job_type.errors.include?(:product) %>

    <% if was_validated %>
      <% if product_was_invalid %>
        <% product_class << " is-invalid" %>
      <% else %>
        <% product_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :product %>
    <%= f.number_field :product, class: product_class, placeholder: "Enter product" %>
    <% if product_was_invalid %>
      <% job_type.errors.full_messages_for(:product).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% strategy_class = "form-control" %>
    <% strategy_was_invalid = job_type.errors.include?(:strategy) %>

    <% if was_validated %>
      <% if strategy_was_invalid %>
        <% strategy_class << " is-invalid" %>
      <% else %>
        <% strategy_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :strategy %>
    <%= f.number_field :strategy, class: strategy_class, placeholder: "Enter strategy" %>
    <% if strategy_was_invalid %>
      <% job_type.errors.full_messages_for(:strategy).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% new_business_launch_class = "form-control" %>
    <% new_business_launch_was_invalid = job_type.errors.include?(:new_business_launch) %>

    <% if was_validated %>
      <% if new_business_launch_was_invalid %>
        <% new_business_launch_class << " is-invalid" %>
      <% else %>
        <% new_business_launch_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :new_business_launch %>
    <%= f.number_field :new_business_launch, class: new_business_launch_class, placeholder: "Enter new business launch" %>
    <% if new_business_launch_was_invalid %>
      <% job_type.errors.full_messages_for(:new_business_launch).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% venture_capital_class = "form-control" %>
    <% venture_capital_was_invalid = job_type.errors.include?(:venture_capital) %>

    <% if was_validated %>
      <% if venture_capital_was_invalid %>
        <% venture_capital_class << " is-invalid" %>
      <% else %>
        <% venture_capital_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :venture_capital %>
    <%= f.number_field :venture_capital, class: venture_capital_class, placeholder: "Enter venture capital" %>
    <% if venture_capital_was_invalid %>
      <% job_type.errors.full_messages_for(:venture_capital).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
