<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interview Styles

    <a data-toggle="collapse" href="#style_interview_styles_new_form">
      Add interview style
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @style.interview_styles.each do |interview_style| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interview_style, interview_style %>

        <%= link_to interview_style, method: :delete, data: { confirm: "Do you really want to delete this interview_style" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="style_interview_styles_new_form">
        <%= render partial: "styles/style_interview_styles_new_form" %>
      </div>
    </div>

  </ul>
</div>
