<%= form_with(model: @interview_style, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :interview_id %>

    <%= f.collection_select :interview_id, Interview.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :style_id, value: @style.id %>

  <%= f.submit "Create interview style", class: "btn btn-block btn-outline-secondary" %>
<% end %>
