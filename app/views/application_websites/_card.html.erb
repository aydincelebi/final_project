<div class="card mb-3">
  <h2 class="card-header h4">
    Application Website #<%= application_website.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Url</dt>
      <dd><%= application_website.url %></dd>

      <dt>Name</dt>
      <dd><%= application_website.name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back application_website, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_application_website_url(application_website), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to application_website, method: :delete, data: { confirm: "Do you really want to delete this application_website?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(application_website.updated_at) %> ago
  </div>
</div>
