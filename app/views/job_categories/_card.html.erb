<div class="card mb-3">
  <h2 class="card-header h4">
    Job Category #<%= job_category.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category</dt>
      <dd>
        <% if @job_category.category.present? %>
          <%= link_to job_category.category, job_category.category %>
        <% end %>
      </dd>

      <dt>Job application</dt>
      <dd>
        <% if @job_category.job_application.present? %>
          <%= link_to job_category.job_application, job_category.job_application %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back job_category, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_job_category_url(job_category), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to job_category, method: :delete, data: { confirm: "Do you really want to delete this job_category?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(job_category.updated_at) %> ago
  </div>
</div>
