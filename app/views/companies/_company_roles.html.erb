<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Roles

    <a data-toggle="collapse" href="#company_roles_new_form">
      Add job application
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.roles.each do |job_application| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to job_application, job_application %>

        <%= link_to job_application, method: :delete, data: { confirm: "Do you really want to delete this job_application" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_roles_new_form">
        <%= render partial: "companies/company_roles_new_form" %>
      </div>
    </div>

  </ul>
</div>
